{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2017", "dom"],
    "outDir": "out",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "strict": true,
    "alwaysStrict": false,
    "noImplicitUseStrict": true,
    "skipLibCheck": true
  },
  "include": [
    "*.ts",
    "spec/*.ts"
  ]
}
